<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/main_btn_cadastrar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_cadastrar"
        android:onClick="sc_cadastrar"
        app:layout_constraintEnd_toEndOf="@+id/main_lbl_welcome"
        app:layout_constraintStart_toStartOf="@+id/main_lbl_welcome"
        app:layout_constraintTop_toBottomOf="@+id/main_lbl_welcome" />


    <Button
        android:id="@+id/main_btn_entrar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_entrar"
        android:onClick="sc_entrar"
        app:layout_constraintEnd_toEndOf="@+id/main_lbl_ou"
        app:layout_constraintStart_toStartOf="@+id/main_lbl_ou"
        app:layout_constraintTop_toBottomOf="@+id/main_lbl_ou" />


    <Button
        android:id="@+id/main_lbl_welcome"
        android:layout_width="200dp"
        android:layout_height="102dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/lbl_welcome"
        android:onClick="sc_historico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_background" />

    <TextView
        android:id="@+id/main_lbl_ou"
        android:layout_width="180dp"
        android:layout_height="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/lbl_ou"
        app:layout_constraintEnd_toEndOf="@+id/main_btn_cadastrar"
        app:layout_constraintStart_toStartOf="@+id/main_btn_cadastrar"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_cadastrar" />

    <TextView
        android:id="@+id/main_lbl_PTI"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/main_lbl_pti"
        app:layout_constraintStart_toStartOf="@+id/main_btn_entrar"
        app:layout_constraintTop_toTopOf="@+id/cadastro_lbl_footer" />

    <TextView
        android:id="@+id/cadastro_lbl_footer"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/main_lbl_int"
        app:layout_constraintEnd_toEndOf="@+id/main_btn_entrar"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_entrar" />

</android.support.constraint.ConstraintLayout>