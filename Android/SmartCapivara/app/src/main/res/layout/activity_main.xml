<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_background_light_brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_cadastrar"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_cadastrar"
        android:onClick="sc_cadastrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_welcome" />


    <Button
        android:id="@+id/btn_entrar"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_entrar"
        android:onClick="sc_entrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_ou" />


    <TextView
        android:id="@+id/lbl_welcome"
        android:layout_width="200dp"
        android:layout_height="102dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/lbl_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_ou"
        android:layout_width="180dp"
        android:layout_height="15dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/lbl_ou"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cadastrar" />

    <TextView
        android:id="@+id/lbl_PTI"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/ativo_pti_260xxxhdpi"
        app:layout_constraintStart_toEndOf="@+id/lbl_InT"
        app:layout_constraintTop_toTopOf="@+id/lbl_InT" />

    <TextView
        android:id="@+id/lbl_InT"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ativo_int_259xxxhdpi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_entrar" />

</android.support.constraint.ConstraintLayout>