<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gestor">

    <TextView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:background="@drawable/gestor_app_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/img_cliente"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/lbl_cargo"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/gestor_lbl_cargo"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background" />

    <TextView
        android:id="@+id/lbl_data"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/gestor_lbl_data"
        app:layout_constraintEnd_toStartOf="@+id/lbl_setor"
        app:layout_constraintTop_toTopOf="@+id/lbl_setor" />

    <TextView
        android:id="@+id/lbl_setor"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/gestor_lbl_setor"
        app:layout_constraintEnd_toEndOf="@+id/lbl_cargo"
        app:layout_constraintStart_toStartOf="@+id/lbl_cargo"
        app:layout_constraintTop_toBottomOf="@+id/lbl_cargo" />

    <TextView
        android:id="@+id/lbl_matricula"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/gestor_lbl_matricula"
        app:layout_constraintStart_toEndOf="@+id/lbl_setor"
        app:layout_constraintTop_toTopOf="@+id/lbl_setor" />

    <TextView
        android:id="@+id/txt_cargo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/lbl_cargo"
        app:layout_constraintStart_toStartOf="@+id/lbl_cargo"
        app:layout_constraintTop_toTopOf="@+id/lbl_cargo" />

    <TextView
        android:id="@+id/txt_data"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/lbl_data"
        app:layout_constraintTop_toTopOf="@+id/lbl_data" />

    <TextView
        android:id="@+id/txt_setor"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/lbl_setor"
        app:layout_constraintStart_toStartOf="@+id/lbl_setor"
        app:layout_constraintTop_toTopOf="@+id/lbl_setor" />

    <TextView
        android:id="@+id/txt_matricula"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/lbl_matricula"
        app:layout_constraintTop_toTopOf="@+id/lbl_matricula" />

    <TextView
        android:id="@+id/txt_nome"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginBottom="24dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/lbl_cargo"
        app:layout_constraintEnd_toEndOf="@+id/lbl_cargo"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/lbl_cargo" />

    <TextView
        android:id="@+id/lbl_deny"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:background="@drawable/gestor_btn_border_red"
        app:layout_constraintStart_toEndOf="@+id/lbl_confirm"
        app:layout_constraintTop_toTopOf="@+id/lbl_confirm" />

    <TextView
        android:id="@+id/btn_deny"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:onClick="gestor_deny"
        android:background="@drawable/gestor_btn_deny"
        app:layout_constraintEnd_toEndOf="@+id/lbl_deny"
        app:layout_constraintStart_toStartOf="@+id/lbl_deny"
        app:layout_constraintTop_toTopOf="@+id/lbl_deny" />

    <TextView
        android:id="@+id/lbl_confirm"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/gestor_btn_border_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background" />

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:onClick="gestor_confirm"
        android:background="@drawable/gestor_btn_confirm"
        app:layout_constraintEnd_toEndOf="@+id/lbl_confirm"
        app:layout_constraintStart_toStartOf="@+id/lbl_confirm"
        app:layout_constraintTop_toTopOf="@+id/lbl_confirm" />
</android.support.constraint.ConstraintLayout>