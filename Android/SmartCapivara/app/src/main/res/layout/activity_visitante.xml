<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Visitante">

    <TextView
        android:id="@+id/vis_background"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:background="@drawable/visitante_app_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vis_background2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/visitante_app_background2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vis_background" />


    <ImageView
        android:id="@+id/vis_img_cliente"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vis_img_pti" />


    <TextView
        android:id="@+id/vis_lbl_data_fim"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_marginStart="58dp"
        android:background="@drawable/visitante_lbl_data_fim"
        app:layout_constraintStart_toStartOf="@+id/vis_lbl_autorizante"
        app:layout_constraintTop_toTopOf="@+id/vis_lbl_data_inicio" />

    <TextView
        android:id="@+id/vis_lbl_data_inicio"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="58dp"
        android:background="@drawable/gestor_lbl_data"
        app:layout_constraintEnd_toEndOf="@+id/vis_lbl_autorizante"
        app:layout_constraintTop_toBottomOf="@+id/vis_txt_autorizante" />

    <TextView
        android:id="@+id/vis_txt_documento"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="3dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/vis_lbl_documento"
        app:layout_constraintStart_toStartOf="@+id/vis_lbl_documento"
        app:layout_constraintTop_toBottomOf="@+id/vis_lbl_documento" />

    <TextView
        android:id="@+id/vis_lbl_autorizante"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/visitante_lbl_autorizante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vis_txt_nome" />

    <TextView
        android:id="@+id/vis_lbl_documento"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/visitante_lbl_documento"
        app:layout_constraintEnd_toEndOf="@+id/vis_lbl_autorizante"
        app:layout_constraintStart_toStartOf="@+id/vis_lbl_autorizante"
        app:layout_constraintTop_toBottomOf="@+id/vis_txt_datainicio" />

    <TextView
        android:id="@+id/vis_txt_autorizante"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="3dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/vis_lbl_autorizante"
        app:layout_constraintStart_toStartOf="@+id/vis_lbl_autorizante"
        app:layout_constraintTop_toBottomOf="@+id/vis_lbl_autorizante" />

    <TextView
        android:id="@+id/vis_txt_datafim"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@+id/vis_lbl_data_fim"
        app:layout_constraintTop_toBottomOf="@+id/vis_lbl_data_fim" />

    <TextView
        android:id="@+id/vis_txt_datainicio"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="3dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="@+id/vis_lbl_data_inicio"
        app:layout_constraintTop_toBottomOf="@+id/vis_lbl_data_inicio" />

    <TextView
        android:id="@+id/vis_txt_nome"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/vis_img_cliente" />

    <TextView
        android:id="@+id/vis_img_pti"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/visitante_lbl_pti_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vis_btn_qr"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:onClick="btnQRCode"
        android:background="@drawable/visitante_btn_qrcode"
        app:layout_constraintStart_toEndOf="@+id/vis_btn_sangue"
        app:layout_constraintTop_toTopOf="@+id/vis_background2" />

    <TextView
        android:id="@+id/vis_btn_sangue"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/visitante_btn_sangue"
        app:layout_constraintStart_toStartOf="@+id/vis_lbl_documento"
        app:layout_constraintTop_toTopOf="@+id/vis_background2" />

    <TextView
        android:id="@+id/vis_btn_msg"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/visitante_btn_msg"
        app:layout_constraintEnd_toEndOf="@+id/vis_lbl_documento"
        app:layout_constraintTop_toTopOf="@+id/vis_background2" />

    <TextView
        android:id="@+id/vis_btn_car"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/visitante_btn_car"
        app:layout_constraintEnd_toStartOf="@+id/vis_btn_msg"
        app:layout_constraintTop_toTopOf="@+id/vis_background2" />


</android.support.constraint.ConstraintLayout>